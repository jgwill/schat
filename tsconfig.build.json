{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "allowImportingTsExtensions": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": false
  },
  "include": [
    "components/**/*",
    "hooks/**/*",
    "services/**/*",
    "constants.ts",
    "personas.ts",
    "types.ts",
    "index.ts"
  ],
  "exclude": [
    "index.tsx",
    "App.tsx",
    "book/**"
  ]
}
